{
  "name": "meow-playground",
  "version": "0.1.0",
  "description": "A little sandbox to play with new technologies and general problems",
  "keywords": [
    "React",
    "JSX",
    "ES6",
    "TypeScript",
    "Flow",
    "Git"
  ],
  "homepage": "home",
  "bugs": {
    "url": "https://github.com/Flameforge/playground/issues",
    "email": "flameforge@gmail.com"
  },
  "license": "MIT",
  "contributors": [
    {
      "name": "Bruno Palma",
      "email": "flameforge@gmail.com",
      "url": "https://github.com/flameforge"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Flameforge/playground"
  },
  "private": false,
  "engines": {
    "node": ">=16.6.1 <17",
    "npm": ">=7.20.5 <8"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "sass": "^1.37.5",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' --quiet --fix",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint",
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": [
        "warn"
      ]
    }
  },
  "prettier": {
    "options": {
      "semi": true,
      "trailingComma": "all",
      "singleQuote": true,
      "printWidth": 120,
      "tabWidth": 2
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^4.29.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "generate-react-cli": "^7.0.4"
  }
}
